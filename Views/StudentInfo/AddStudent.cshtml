@model SchoolApplication.Models.Student


<form method="post" asp-controller="StudentInfo" asp-action="AddStudent">
    <div class="form-group">
        <label asp-for="rollNumber">Enter roll number</label>
        <input asp-for="rollNumber" type="number" class="form-control" placeholder="Roll number">
    </div>
    <div class="form-group">
        <label asp-for="className">Enter class name</label>
        <input asp-for="className" type="text" class="form-control" placeholder="Class Name">
    </div>
    <div class="form-group">
        <label asp-for="email">Enter email</label>
        <input asp-for="email" type="text" class="form-control" placeholder="Email">
    </div>
    <div class="form-group">
        <label asp-for="phone" for="exampleInputPassword1">Enter phone number</label>
        <input asp-for="phone" type="text" class="form-control" placeholder="Phone number">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>